{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es2018",
    "lib": [
      "es2018",
      "esnext.array",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/rssproxy-core/dist"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
